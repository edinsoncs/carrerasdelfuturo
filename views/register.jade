doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name="viewport", content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0")
    meta(name="robots", content="noindex")
    meta(name="googlebot", content="noindex")
    title Carreras del Futuro
    link(href="https://fonts.googleapis.com/css?family=Titillium+Web" rel="stylesheet")
    link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Open+Sans")
    link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Roboto")

    link(rel="stylesheet", href="../stylesheets/bootstrap.min.css")
    link(rel="stylesheet", href="../stylesheets/bootstrap-theme.css")
    link(rel="stylesheet", href="../stylesheets/app.css")

    script(src="http://code.jquery.com/jquery-1.9.1.js")
    script(src="../javascripts/bootstrap.min.js")
    script(src="../javascripts/code-developer.js")
    //script(src="javascripts/code-developer2.js")
    //script(src="javascripts/code-developer3.js")
 body.uColorWhite
  header.header.container-fluid
   div.row
    section.header__Web.col-xs-8.col-md-10
     h1.titleHeader
      | Carrerasdelfuturo

  main.container.viewLogin
    div.row
      header.viewLogin__Header.col-md-12
        h2.title
          | Registrarme una cuenta
    div.row
      div.viewLogin__Show.col-md-12
         if messages.info
           h2.titleError #{messages.info}
      div.col-md-6.viewLogin__Panel
        form.login(action="/register/save", method="post")
          fieldset.login--Fieldset.col-md-6
           input.form-control(type="text", placeholder="Nombre de usuario", name="usuario", required)
          fieldset.login--Fieldset.col-md-6
           input.form-control(type="text", placeholder="Nombre y Apellidos", name="namefull", required)
          fieldset.login--Fieldset.col-md-12
           input.form-control(type="email", placeholder="Email", name="email", required)
          fieldset.login--Fieldset.col-md-6
           input.form-control(type="password", placeholder="Passsword", name="password", required)
          fieldset.login--Fieldset.col-md-6
           input.form-control(type="password", placeholder="Confirmar Password", name="passwordConfirm", required)
          fieldset.login--Fieldset.col-md-12
           input(type="submit", value="Empezar Clases")

      div.col-md-6.viewRegister__Panel
        header.viewRegister__Panel--Header
          h3.title
            | Ya tienes una cuenta?
        div.viewRegister__Panel--Continue
          a.linkContinue(href="login")
            | Ingresar
  
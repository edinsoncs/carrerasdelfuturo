body, h1, h2, h3, h4, h5, h6
	margin 0

//Colors
$blanco = white	
.none
	display none

body 
	background-color #eee
	font-family 'Open Sans', sans-serif

.header
	background-color #2c3e50
	line-height 55px
	padding-left 2em
	padding-right 2em
	box-shadow 0 2px 3px #4a6989
	position fixed
	top 0
	left 0
	right 0
	z-index 999
	.header__Web
		padding-top 0.8em
		padding-bottom 0.8em
		.titleHeader
			color $blanco
			font-family 'Titillium Web', sans-serif
			text-transform uppercase
			font-size 2em
	.header__Nav
		.header__Nav--Ul
			margin-bottom 0
			.list
				list-style-type none
				line-height 34px
				margin 0.5em 0
				display inline-block
				.link.payment
					margin 5em 0 0 0
					background-color #e10700
					text-decoration none
					color white
					padding 0.5em 1em
					cursor pointer
					border-radius 3px
					font-size 1.2em
				.link.login
					margin 5em 0 0 1em
					background-color #2980b9
					text-decoration none
					color white
					padding 0.5em 1em
					cursor pointer
					border-radius 3px
					font-size 1.2em
				.formPayment
					input[type='submit']
						background-color #e10700
						color white
						padding 0 1em
						outline: medium none
						border-radius 4px
						border none
						
.subHeaderHome
	background linear-gradient(to right, rgba(32,179,93,1) 0%, rgba(46,204,113,1) 52%, rgba(60,222,128,1) 99%, rgba(60,222,128,1) 100%)
	background  -ms-linear-gradient(left, rgba(32,179,93,1) 0%, rgba(46,204,113,1) 52%, rgba(60,222,128,1) 99%, rgba(60,222,128,1) 100%)
	background -moz-linear-gradient(to right, rgba(32,179,93,1) 0%, rgba(46,204,113,1) 52%, rgba(60,222,128,1) 99%, rgba(60,222,128,1) 100%)
	background -webkit-linear-gradient(to right, rgba(32,179,93,1) 0%, rgba(46,204,113,1) 52%, rgba(60,222,128,1) 99%, rgba(60,222,128,1) 100%)
	height 400px
	background-size cover
	background-position center top
	overflow hidden
	position relative
	.homeSlider
		position relative
		.homeSlider__Show
			position absolute
			right 0
			top 0
			right 0
			width 100%
			display flex
			justify-content space-between
			align-items center
			.homeSlider__Show--Txt
				.title
					color $blanco
					font-family 'Oswald', sans-serif
					text-transform capitalize
				.button .button__Link
					padding 1em
					background linear-gradient(#4285f4, #2775d1)
					background -moz-linear-gradient(#4285f4, #2775d1)
					background -webkit-linear-gradient(#4285f4, #2775d1)
					background -mz-linear-gradient(#4285f4, #2775d1)
					color white
					display block
					width 120px
					text-align center
					margin 2em 0 0 0 
					border-radius 50px
					box-shadow 0 4px 0 #244883
					&:hover
						text-decoration none
						box-shadow 0 4px 0 #2775d1
						background linear-gradient(#244883, #244883)
						background -webkit-linear-gradient(#244883, #244883)
						background -moz-linear-gradient(#244883, #244883)
						background -mz-linear-gradient(#244883, #244883)
						
						
			.homeSlider__Show--Figure
				margin-top 50px
				animation homePerson 1s
				opacity 1
				@keyframes homePerson
					50% 
						opacity 0.5
	

.subHeader
	background-color black
	background-image url('../images/bg.jpg')
	height 400px
	background-size cover
	background-position center top
	overflow hidden
	position relative
	.videoWeb
		width 100%
		opacity 0.3
	.subHeader--Details
		position absolute
		top 50%
		width 100%
		margin-top -2em
		padding-left 2em 
		padding-right 2em
		text-align  center
		
		.subHeader--Details--Header
			width 30%
			margin 0 auto
			border-bottom 1px solid #f1c40f
			padding-bottom 1em
			.title
				color white
				text-shadow 0 2px 5px #000
				font-size 2em
		.subHeader--Details--Price
			.Price
				color white
				margin 1em 0
				font-size 2.5em
				&:before
					content "Desde: "
					text-shadow 0 2px 2px black

.subHeader__Description 
	background-color #f1c40f
	line-height 25px
	padding-left 2em
	padding-right 2em
	padding-top 1em
	padding-bottom 1em
	text-align center
	.title
		font-family 'Open Sans', sans-serif
		text-transform capitalize
		font-size 1.5em
		

.header__Cours
	padding-top 2em
	padding-bottom 2em
	.header__Cours--Articl
		padding-left 0
		padding-right 0
		video 
			display none
			width 100%
		.Articl--Figure
			img
				width 100%
				display block
				position relative
			.container--Icon
				position absolute
				background-color rgba(0, 0, 0, 0.43)
				top 0
				left 0
				right 0
				bottom 0
				text-align center
				i 
					color white
					font-size 4em
					margin 2.5em 0
					text-shadow 0 2px 2px black
					cursor pointer
	.header__Cours--Aside
		.Aside--Header
			text-align center
			margin 0 0 2em 0
			.title
				color #7F8A94
		.Aside--Description
			padding-top 1em
			padding-bottom 1em
		
		.Aside--Header--Details
			margin 0 0 2em 0
			.title
				font-size 1.2em
				color #7F8A94
		.Aside__Ul
			padding 0
			margin 0.5em 0 0 0
			.list
				list-style-type none
				i 
					margin 0 0.5em 0 0
					color #03A9F4

.description__Cours 
	padding-top 2em 
	padding-bottom 2em
	background-color $blanco
.header_content
	padding-top 1em
	padding-left 0
	padding-right 0
.ulShow
	padding 0
	margin-top 1em
	background-color white
	border 1px solid #E8EBED
	.titleLabel
		background-color #F7F9FA
		display block
		padding 1em
		color #42474D
	.list--Show
		list-style-type none
		padding 0 1em
		margin 0 0 0.8em 0
		color #999999
		border-bottom 1px solid #E8EBED
		i 
			margin 0 0.5em 0 0
			color #999999
			background-color #33c17a
			border-radius 50%
			color #fff
	.learningSum
		text-align center
		border 1px solid #33c17a
		padding 0.8em 0
		width 20%
		margin 0 auto
		cursor pointer
		&:hover
			background-color #33c17a
			color white
.aside__Author
	.aside__Price--Contain
		text-align center
		margin 0 0 1em 0
		.aside__Price--Header
		.aside__Price--Show
			.price
				font-size 2.2em
				color #F44336
		.aside__Price--Buy
			.linkBuy
				margin 0 auto
				background-color #f1c40f
				color white
				padding 0.8em 1em
				display block
				width 40%
				cursor pointer
				text-align center
				border-radius 4px
				border 1px solid #937604
				font-size 1.2em
				&:hover
					text-decoration none
					
		
	.aside__Author--Contain
		text-align center
		background-color white
		border 1px solid #33c17a
		padding-top 1em
		padding-bottom 1em
	.aside__Author--Header
		.title
			margin 0 0 0.5em 0
	.aside__Author--Figure
		img 
			width 80px
			border-radius 50%
			border 3px solid #33c17a
			

.viewVideo
	margin-top 5em
	background-color white
	border 1px solid #dedede
	.videoPrimary
		.videoPrimary--Header
			padding-top 1em
			padding-bottom 1em
			.title
				color #514e4e
				font-family 'Roboto', sans-serif
		#my-video
			width 100%
			height 500px
	.videoSecondary
		padding-top 1em
		padding-bottom 1em
		.video--Iz
			background-color #f6f6f6
			text-align center
			padding-top 1em
			padding-bottom 1em
		.video--De
			background-color #eee
			text-align center
			padding-top 1em
			padding-bottom 1em
			&:active
				background-color #d7d7d7
			.linkNext
				color #514e4e
				&:hover
					text-decoration none

.viewLogin
	position absolute
	top 50%
	left 50%
	margin-top -2%
	margin-left -15%
	width 50%
	.login
		background-color white
		padding 1em
		.login--Fieldset
			input[type='email'], input[type='password']
				width 100%
				padding 0.5em
				border none
				margin 0 0 0.5em 0
				border 1px solid #dedede
				border-radius 4px
				outline none
			input[type='submit']
				background-color #2196F3
				color white
				outline none
				padding 0.5em 1em
				border-radius 4px
				border none
			
			&:last-child
				text-align center		
.successUser 
	position fixed
	z-index 2999
	top 50%
	margin-top: -10%
	background-color white
	width 30%
	left 50%
	margin-left -14%
	text-align center
	.headerSuccess
		.title
			font-size 2rem
			margin 0.5em 0
	.figure
		img
			margin 0 0 0.5em 0
			border-radius 50%
	.usershow
		padding 1em 0
	.usershow--Login a
		background-color #e10700
		color white
		padding 0.5em 1em

.successUserBg 
	position fixed
	top 0
	bottom 0
	left 0
	right 0
	background-color rgba(35, 35, 35, 0.81)

.homeMain
	padding 2em 0
	.home__Top
		text-align center
		.home__Top--Header
			margin 0 auto!important
			float none
			border-bottom 1px solid #244883
			padding-bottom 1em
			.title
				color #42474D!important
				font-weight 700
		.home__Top--Description
			padding 1em 0
			.description
				font-size 1.2em
	
	.home__Top--Two
		font-size 30px
		padding 2rem 0
		.home__Top--Two--Articl
			text-align center
			.figure img
				display block
				margin 0 auto
			.headerArticl
				padding 12px 0
			.description .show
				font-size 1.5rem
	.home__Top--Tree--Header
		padding 1.5em 0
		text-align center
		.title
			font-size 2.2em
	.home__Top--Tree
		.cours
			.cours--Figure img
				width 100%
				display block
			.cours--Header
				background-color white
				display block
				padding 1em
				text-align center
	.home__BottomLeft
		padding 5em 0
		.headerLeft
			display block
			float none
			.title
				font-size 2em
				margin-bottom 12px
				border-bottom 1px solid #244883
				padding-bottom 0.3em
				font-family 'Oswald', sans-serif
		.descriptionLeft
			padding-bottom 6em
	.home__BottomAside
		padding 5em 0 0 0


.title {
	color: #42474d!important;
}

@media screen and (min-width:0) and (max-width:769px)
	body 
	.subHeader--Details--Header
		width 90%!important
	.header__Nav
		.header__Nav--Ul
			.list
				.payment
					display none
			.list
				.login 
					display none
	.subHeader .subHeader--Details
		margin-top -5em
		font-size 1rem
	.subHeader__Description .title
		font-size 1.5rem
	.header__Cours .header__Cours--Articl .Articl--Figure .container--Icon i
		margin 25% 0
	.header__Cours .header__Cours--Aside .Aside--Header .title
		margin 1em 0 0 0
	.description__Cours--Show
		padding-left 1em
		padding-right 1em
body, h1, h2, h3, h4, h5, h6
	margin 0

//Colors
$blanco = white	
.none
	display none

body 
	background-color #eee
	font-family 'Open Sans', sans-serif

.header
	background-color #2c3e50
	line-height 50px
	padding-left 2em
	padding-right 2em
	box-shadow 0 2px 3px #4a6989
	position fixed
	top 0
	left 0
	right 0
	z-index 999
	.header__Web
		padding-top 0.5em
		padding-bottom 0.5em
		.title
			color $blanco
			font-family 'Titillium Web', sans-serif
			text-transform uppercase
			font-size 2em

.subHeader
	background-color black
	background-image url('../images/bg.jpg')
	height 400px
	background-size cover
	background-position center top
	overflow hidden
	position relative
	.videoWeb
		width 100%
		opacity 0.3
	.subHeader--Details
		position absolute
		top 50%
		width 100%
		margin-top -2em
		padding-left 2em 
		padding-right 2em
		text-align  center
		
		.subHeader--Details--Header
			width 30%
			margin 0 auto
			border-bottom 1px solid #f1c40f
			padding-bottom 1em
			.title
				color white
				text-shadow 0 2px 5px #000
				font-size 2em

.subHeader__Description 
	background-color #f1c40f
	line-height 25px
	padding-left 2em
	padding-right 2em
	padding-top 1em
	padding-bottom 1em
	text-align center
	.title
		font-family 'Open Sans', sans-serif
		text-transform capitalize
		font-size 1.5em
		

.header__Cours
	padding-top 2em
	padding-bottom 2em
	.header__Cours--Articl
		.Articl--Figure
			img
				width 100%
	.header__Cours--Aside
		.Aside--Header
			text-align center
			margin 0 0 2em 0
			.title
				color #7F8A94
		.Aside--Description
			padding-top 1em
			padding-bottom 1em
		
		.Aside--Header--Details
			margin 0 0 2em 0
			.title
				font-size 1.2em
				color #7F8A94
		.Aside__Ul
			padding 0
			margin 0.5em 0 0 0
			.list
				list-style-type none
				i 
					margin 0 0.5em 0 0
					color #03A9F4

.description__Cours 
	padding-top 2em 
	padding-bottom 2em
	background-color $blanco
.header_content
	padding-top 1em
	padding-left 0
	padding-right 0
.ulShow
	padding 0
	margin-top 1em
	background-color white
	border 1px solid #E8EBED
	.titleLabel
		background-color #F7F9FA
		display block
		padding 1em
		color #42474D
	.list--Show
		list-style-type none
		padding 0 1em
		margin 0 0 0.8em 0
		color #999999
		border-bottom 1px solid #E8EBED
		i 
			margin 0 0.5em 0 0
			color #999999
			background-color #33c17a
			border-radius 50%
			color #fff
	.learningSum
		text-align center
		border 1px solid #33c17a
		padding 0.8em 0
		width 20%
		margin 0 auto
		cursor pointer
		&:hover
			background-color #33c17a
			color white
.aside__Author
	.aside__Author--Contain
		text-align center
		background-color white
		border 1px solid #33c17a
		padding-top 1em
		padding-bottom 1em
	.aside__Author--Header
		.title
			margin 0 0 0.5em 0
	.aside__Author--Figure
		img 
			width 80px
			border-radius 50%
			border 3px solid #33c17a